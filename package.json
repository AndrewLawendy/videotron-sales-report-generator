{
  "name": "Ventes-PAV",
  "version": "1.0.0",
  "description": "",
  "main": "src/electron.js",
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "formik": "^2.1.5",
    "node-sass": "^4.14.1",
    "react": "^16.8.4",
    "react-datepicker": "^3.1.3",
    "react-dom": "^16.8.4",
    "react-notifications-component": "^2.4.0",
    "select": "^1.1.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^1.1.1",
    "xlsx-parse-json": "^3.1.0",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.2",
    "parcel-bundler": "^1.12.1",
    "prettier": "^1.16.1",
    "sass": "^1.26.10",
    "wait-on": "^5.2.0"
  },
  "scripts": {
    "clear-build-cache": "rm -rf .cache/ dist/",
    "parcel-dev": "parcel src/index.html",
    "parcel-build": "parcel build src/index.html -d prod/ --public-url ./ --no-source-maps",
    "format": "prettier --write \"src/**/*.{js,jsx,scss}\"",
    "lint": "eslint \"src/**/*.{js,jsx,scss}\" --quiet",
    "build": "yarn parcel-build && electron-builder",
    "start": "concurrently \"cross-env BROWSER=none yarn parcel-dev\" \"wait-on http://localhost:1234 && electron .\""
  },
  "build": {
    "appId": "ventes-pav.videotron.com",
    "productName": "Ventes Pav",
    "win": {
      "target": "portable"
    },
    "directories": {
      "output": "electron/ventes-pav"
    }
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndrewLawendy/videotron-sales-report-generator.git"
  },
  "author": "Andrew Lawendy",
  "license": "ISC",
  "bugs": {
